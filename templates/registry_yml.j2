registry:
  restart: always
  image: registry:2
  ports:
    - 4000:5000
  environment:
    REGISTRY_HTTP_TLS_CERTIFICATE: /certs/domain.crt
    REGISTRY_HTTP_TLS_KEY: /certs/domain.key
    REGISTRY_HTTP_SECRET: thisisasecretthatshouldbebetter
  volumes:
    - /var/lib/docker/registry:/var/lib/registry
    - /var/lib/docker/certs:/certs
